{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "scripthost"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["/dist", "node_modules"]
}
