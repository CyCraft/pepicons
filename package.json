{
  "name": "@pepicons/monorepo",
  "private": true,
  "version": "1.2.3",
  "author": "Luca Ban - Mesqueeb",
  "funding": "https://github.com/sponsors/mesqueeb",
  "license": "CREATIVE COMMONS ATTRIBUTION 4.0 INTERNATIONAL LICENSE",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:docs": "npm run _warn && npm run dev -w=pepicons.com",
    "dev:vue": "npm run _warn && npm run dev -w=@pepicons/vue",
    "deploy:pepicons.com": "firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\" && git push",
    "bump": "node -r esbuild-register scripts/bump.ts",
    "build": "npm run _prepare-pepicons && npm run build -w=pepicons && npm run build -w=@pepicons/vue && npm run build -w=pepicons.com",
    "release": "npm run bump && npm publish --workspaces --access public",
    "dep:update-all:soft": "ncu --workspaces --root --target minor -u",
    "dep:update-all": "ncu --workspaces --root --target minor -u && npm i",
    "dep:check-for-updates": "ncu --workspaces --root",
    "dep:reinstall-all:soft": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf node_modules && npm i",
    "dep:reinstall-all:hard": "npx rimraf package-lock.json && npm run dep:reinstall-all:soft",
    "_prepare-pepicons": "node ./scripts/preparePepicons.js",
    "_warn": "echo \"BE SURE TO RUN npm run build ONCE! otherwise the dev server might not launch\""
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "bugs": {
    "url": "https://github.com/cycraft/pepicons/issues"
  },
  "homepage": "https://github.com/cycraft/pepicons#readme",
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.16",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitejs/plugin-vue": "^3.2.0",
    "@viteplay/plugin": "^0.2.4",
    "@viteplay/vue": "^0.2.4",
    "archiver": "^5.3.1",
    "babel-eslint": "^10.1.0",
    "case-anything": "^2.1.10",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.12",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.4.0",
    "exec-sh": "^0.4.0",
    "fast-sort": "^3.2.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^9.1.4",
    "lerna": "^5.5.1",
    "mri": "^1.2.0",
    "npm-check-updates": "^16.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "renamer": "^4.0.0",
    "replace-in-file": "^6.3.5",
    "replace-in-files-cli": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-typescript2": "^0.33.0",
    "sass": "^1.55.0",
    "svgo": "^2.8.0",
    "tiny-replace-files": "^1.0.2",
    "typescript": "^4.8.3",
    "vite": "^3.2.2",
    "vue": "^3.2.41",
    "vue-intellisense": "^1.0.1",
    "vue-tsc": "^1.0.9"
  }
}
