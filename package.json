{
  "name": "pepicons",
  "private": true,
  "author": "Luca Ban - Mesqueeb",
  "scripts": {
    "audit": "lerna-audit",
    "dev": "cd packages/pepicons.com && npm run dev",
    "deploy:pepicons.com": "firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\" && git push",
    "build": "npm run prepare-pepicons && lerna run build",
    "build:favicon": "lerna run build:favicon",
    "publish": "npm run publish-pre && lerna publish && npm run deploy:pepicons.com",
    "publish-pre": "npm run build && git add -A && git commit -m \"chore: build\"",
    "prepare-pepicons": "node ./scripts/preparePepicons.js && node ./scripts/archiveSvgs",
    "dep:install": "npm i && lerna bootstrap",
    "dep:update-all": "ncu --target minor -u && lerna exec 'ncu --target minor -u' && npm run dep:install",
    "dep:check-for-updates": "ncu --target minor && lerna exec 'ncu --target minor'",
    "dep:reinstall-all": "rimraf node_modules && lerna clean -y && npm run dep:install"
  },
  "bugs": {
    "url": "https://github.com/cycraft/planetar/issues"
  },
  "homepage": "https://github.com/cycraft/planetar#readme",
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "archiver": "^5.2.0",
    "babel-eslint": "^10.1.0",
    "case-anything": "^1.1.2",
    "copyfiles": "^2.4.1",
    "debounce": "^1.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-vue": "^7.4.1",
    "fast-sort": "^2.2.0",
    "lerna": "^3.22.1",
    "npm-check-updates": "^9.2.4",
    "prettier": "^2.2.1",
    "renamer": "^2.0.1",
    "replace-in-file": "^6.1.0",
    "replace-in-files-cli": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.3"
  }
}
