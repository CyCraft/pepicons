{
  "name": "pepicons",
  "private": true,
  "author": "Luca Ban - Mesqueeb",
  "scripts": {
    "audit": "lerna-audit",
    "dev": "cd packages/pepicons.com && npm run dev",
    "build": "npm run prepare-pepicons && lerna run build",
    "build-pre-publish": "npm run build && git add -A && git commit -m \"chore: build\"",
    "build-post-publish": "firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\" && git push",
    "build:favicon": "lerna run build:favicon",
    "publish": "npm run build-pre-publish && lerna publish && build-post-publish",
    "prepare-pepicons": "node ./scripts/preparePepicons.js && node ./scripts/archiveSvgs",
    "dep:install": "npm i && lerna bootstrap",
    "dep:update-all": "ncu --target minor -u && lerna exec 'ncu --target minor -u' && npm run dep:install",
    "dep:check-for-updates": "ncu --target minor && lerna exec 'ncu --target minor'",
    "dep:reinstall-all": "rimraf node_modules && lerna clean -y && npm run dep:install"
  },
  "bugs": {
    "url": "https://github.com/cycraft/planetar/issues"
  },
  "homepage": "https://github.com/cycraft/planetar#readme",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "archiver": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "case-anything": "^1.1.2",
    "copyfiles": "^2.3.0",
    "debounce": "^1.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-vue": "^6.2.2",
    "fast-sort": "^2.2.0",
    "lerna": "^3.22.1",
    "npm-check-updates": "^9.0.2",
    "prettier": "^2.1.2",
    "renamer": "^2.0.1",
    "replace-in-file": "^6.1.0",
    "replace-in-files-cli": "^0.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "typescript": "^4.0.3"
  }
}
